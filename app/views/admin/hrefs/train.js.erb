<% unless flash[:notice].blank? %>
    $("div.flash").html("<%= escape_javascript (raw(flash[:notice])) %>");
    $("div.flash").show(100);
    $("div.flash").click(function(){
        $("div.flash").hide(100);
    });
    setTimeout(function(){
      $('div.flash').hide(100);
    }, 1000);
<% end %>
