h1
  = "Amy Href's links of the day for " + Time.now.strftime("%A, %b %d %Y").to_s + ' 😎'

.links
  - @hrefs.each_with_index do |href, index|
    .link id="#{href.id}"
      a class='embedly-card' data-card-via='amyhref.com' data-card-controls='0' href="#{href.url}"
      p.break.meta.right
        ' &mdash; #{href.newsletter.email if href.newsletter} ~ #{href.rating || '∞'}
