<!DOCTYPE html>
<html>
  <head>
    <title>Amyhref.com // Yesterday's links today</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="/images/amyhref.ico" /> 
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='flash' style='display: none;'>
    </div>
    <div class='header'>
      <% if logged_in? %>
        <% if controller.controller_name == 'you' %>
          <%= link_to 'Home', '/', :class => 'btn you left' %>
        <% else %>
          <%= link_to 'Your profile', '/you', :class => 'btn you left' %>
        <% end %>
      <% end %>

      <%= yield :title %>

      <% if logged_in? %>
        <%= link_to 'Sign out', '/signout', :class => 'btn signout right', :method => :delete %>
      <% else %>
        <%= link_to 'Sign in', '/auth/google_oauth2', :class => 'btn btn--primary signin right' %>
      <% end %>
    </div>

    <%= yield %>

    <%= render :partial => 'shared/embedly' %>

    <%= yield :javascript_for_footer %>

    <%= render :partial => 'shared/ga' %>
  </body>
</html>
